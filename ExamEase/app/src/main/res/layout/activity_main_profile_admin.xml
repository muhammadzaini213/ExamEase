<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/exit_profile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/button_exit"
        android:layout_margin="5dp"
        app:tint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/main_title_info_school"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@drawable/border_dialog"
        android:text="PROFILE"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_dialog"
        android:paddingVertical="30dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="SCHOOL ID"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="@+id/copy_school_id"
            />

        <EditText
            android:id="@+id/copy_school_id"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="5dp"
            android:inputType="none"
            android:focusable="false"
            android:background="@drawable/background_textfield"
            android:hint="loading..."
            android:padding="15dp"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="SCHOOL NAME"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="@+id/school_name_input"
            app:layout_constraintTop_toBottomOf="@+id/copy_school_id" />

        <EditText
            android:id="@+id/school_name_input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/background_textfield"
            android:hint="loading..."
            android:padding="10dp"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/admin_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="NAME"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="@+id/admin_name_input"
            app:layout_constraintTop_toBottomOf="@+id/school_name_input" />

        <EditText
            android:id="@+id/admin_name_input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/background_textfield"
            android:hint="loading..."
            android:padding="10dp"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@+id/admin_name" />

        <TextView
            android:id="@+id/school_uid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="UID"
            android:inputType="none"
            android:focusable="false"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="@+id/uid_input"
            app:layout_constraintTop_toBottomOf="@+id/admin_name_input" />

        <EditText
            android:id="@+id/uid_input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/background_textfield"
            android:padding="10dp"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@+id/school_uid" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="DATE LIMIT"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="@+id/editText9"
            app:layout_constraintTop_toBottomOf="@id/uid_input" />

        <EditText
            android:id="@+id/editText9"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/background_textfield"
            android:hint="24/03/30"
            android:padding="15dp"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@id/textView8" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/upgrade_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/background_textfield"
            android:text="Support Us ^_^"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/editText9" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/save_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/background_login_button"
            android:text="Save"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/upgrade_btn" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/logout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/background_login_button"
        android:text="Logout"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/container" />

</androidx.constraintlayout.widget.ConstraintLayout>