        <activity
            android:name=".login.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".login.ForgotPasswordActivity"/>
        <activity android:name=".login.CreateAccountActivity"/>
        <activity android:name=".main.MainActivity"/>
        <activity android:name=".main.ProfileActivity"/>

        <activity android:name=".ExamActivity"/>
        <activity android:name=".webexam.WebExamActivity"/>
        <activity android:name=".AnnouncementActivity"/>
        <activity android:name=".AttendanceActivity"/>
        <activity android:name=".SettingsActivity"/>
        <activity android:name=".PolicyActivity"/>





    </application>
</manifest>